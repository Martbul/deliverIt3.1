<main>
  <h1>Make an Order</h1>
  <div class="formForDel">
    <form action="/orders/create" method="POST">
      <label for="fullname">Full Name</label>
      <input type="text" id="fullname" name="fullname" />
      <label for="order">Order</label>
      <textarea id="order" name="order"></textarea>
      <label for="addres">Address</label>
      <input type="text" id="address" name="address" />
      <label for="dayForDelivery">Preffered day for delivery</label>
      <select id="dayForDelivery" name="dayForDelivery">
        <option value="Monday">Monday</option>
        <option value="Tuesday">Tuesday</option>
        <option value="Wednesday">Wednesday</option>
        <option value="Thursday">Thursday</option>
        <option value="Friday">Friday</option>
        <option value="Saturday">Saturday</option>
        <option value="Sunday">Sunday</option>
        <label for="timeForDelivery">Preffered time for delivery</label>
        <input id="timeForDelivery" name="timeForDelivery" />

        <input type="submit" value="Create" />
    </form>
  </div>



